<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/fondoapp2"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="592dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="23dp"
        android:layout_marginBottom="80dp"
        android:background="#CCCCCC"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center_horizontal"
            android:text="Encuentra      al negacionista"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="50sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <Button
            android:id="@+id/BotonJugar"
            android:layout_width="123dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:backgroundTint="#06880C"
            android:fontFamily="serif"
            android:onClick="FuncionEmpezarJuego"
            android:text="Jugar"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textStyle="bold">

        </Button>

        <Button
            android:id="@+id/BotonOpciones"
            android:layout_width="123dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"
            android:backgroundTint="#AB5CB8"
            android:fontFamily="serif"
            android:onClick="FuncionMenuOpciones"
            android:text="Opciones"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#FFFFFF">

        </Button>

        <Button
            android:id="@+id/BotonSalir"
            android:layout_width="123dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"
            android:backgroundTint="#B80303"
            android:fontFamily="serif"
            android:onClick="FuncionTestSalir"
            android:text="Salir"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#FFFFFF">

        </Button>

        <ImageButton
            android:id="@+id/tuto"
            android:layout_width="56dp"
            android:layout_height="59dp"
            android:layout_gravity="center"
            android:background="#00FFFFFF"
            android:tint="#034AA1"
            app:srcCompat="@mipmap/ic_stat_help_outline"
            android:layout_marginTop="12dp"
            android:onClick="FuncionTutorial"/>


    </LinearLayout>


</LinearLayout>