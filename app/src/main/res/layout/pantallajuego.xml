<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondojuego">
    <TableLayout
        android:padding="16dp"
        android:stretchColumns="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableRow>

            <ImageView
                android:id="@+id/imag12"
                android:layout_width="180dp"
                android:layout_height="240dp"
                android:onClick="onClick"
                android:visibility="visible"
                app:srcCompat="@drawable/e" />

            <ImageView
                android:id="@+id/imag21"
                android:layout_width="180dp"
                android:layout_height="240dp"
                android:onClick="onClick"
                android:visibility="visible"
                app:srcCompat="@drawable/ey" />
        </TableRow>
        <TableRow>

            <ImageView
                android:id="@+id/imag22"
                android:layout_width="180dp"
                android:layout_height="240dp"
                android:onClick="onClick"
                android:visibility="visible"
                app:srcCompat="@drawable/e" />

            <ImageView
                android:id="@+id/imag41"
                android:layout_width="180dp"
                android:layout_height="240dp"
                android:onClick="onClick"
                android:visibility="visible"
                app:srcCompat="@drawable/ey" />
        </TableRow>
        <TableRow>

            <ImageView
                android:id="@+id/imag31"
                android:layout_width="180dp"
                android:layout_height="240dp"
                android:onClick="onClick"
                android:visibility="visible"
                app:srcCompat="@drawable/e" />

            <ImageView
                android:id="@+id/imag32"
                android:layout_width="180dp"
                android:layout_height="240dp"
                android:onClick="onClick"
                android:visibility="visible"
                app:srcCompat="@drawable/ey" />
        </TableRow>

    </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="103dp"
            android:layout_height="54dp"
            android:background="@color/white"
            app:srcCompat="@drawable/engranaje2"
            android:onClick="FuncionIrOpcionesJuego"/>

        <TextView
            android:id="@+id/cuentaAtras"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="#FF5722"
            android:paddingTop="13dp"
            android:textSize="23dp" />

    </LinearLayout>








</RelativeLayout>