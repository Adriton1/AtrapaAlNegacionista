<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondojuego">

    <GridLayout
        android:id="@+id/Grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alignmentMode="alignBounds"
        android:columnCount="2"
        android:rowCount="2">

        <ImageView
            android:id="@+id/imag12"
            android:layout_width="180dp"
            android:layout_height="240dp"
            android:onClick="onClick"
            android:tag="Persona"
            android:visibility="visible"
            app:srcCompat="@drawable/bien1" />

        <ImageView
            android:id="@+id/imag21"
            android:layout_width="180dp"
            android:layout_height="240dp"
            android:onClick="onClick"
            android:tag="Persona"
            android:visibility="visible"
            app:srcCompat="@drawable/bien1" />

        <ImageView
            android:id="@+id/imag22"
            android:layout_width="180dp"
            android:layout_height="240dp"
            android:onClick="onClick"
            android:tag="Persona"
            android:visibility="visible"
            app:srcCompat="@drawable/bien1" />

        <ImageView
            android:id="@+id/imag41"
            android:layout_width="180dp"
            android:layout_height="240dp"
            android:onClick="onClick"
            android:tag="Persona"
            android:visibility="visible"
            app:srcCompat="@drawable/bien1" />

        <ImageView
            android:id="@+id/imag31"
            android:layout_width="180dp"
            android:layout_height="240dp"
            android:onClick="onClick"
            android:tag="Persona"
            android:visibility="visible"
            app:srcCompat="@drawable/bien1" />

        <ImageView
            android:id="@+id/imag32"
            android:layout_width="180dp"
            android:layout_height="240dp"
            android:onClick="onClick"
            android:tag="Persona"
            android:visibility="visible"
            app:srcCompat="@drawable/bien1" />

    </GridLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:layout_marginTop="18dp">

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="103dp"
            android:layout_height="54dp"
            android:background="#00FFFFFF"
            android:onClick="FuncionIrOpcionesJuego"
            app:srcCompat="@mipmap/settings" />

        <TextView
            android:id="@+id/cuentaAtras"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_horizontal"
            android:paddingTop="13dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="23dp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>